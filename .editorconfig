# editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

# markup is not minified so reduce character output by using tabs
[*.{html}]
indent_style = tab
indent_size = 4
